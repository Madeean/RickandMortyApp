<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkmode_biru_tua"
    tools:context=".presentation.tentang_aplikasi_ini.activity.TentangAplikasiIniActivity">

    <include android:id="@+id/tentang_aplikasi_toolbar"
        layout="@layout/detail_toolbar"/>

    <ImageView
        android:id="@+id/iv_tentang_aplikasi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/rickandmorty"
        app:layout_constraintTop_toBottomOf="@id/tentang_aplikasi_toolbar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:contentDescription="@string/detail_image" />

    <TextView
        android:justificationMode="inter_word"
        android:textSize="16sp"
        android:textColor="@color/darkmode_biru_sangat_muda"
        android:text="@string/penjelasan_rick_and_morty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_tentang_aplikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:targetApi="o" />

</androidx.constraintlayout.widget.ConstraintLayout>